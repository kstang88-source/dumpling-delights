---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Dumpling Delights",
  description = "Freshly handmade dumplings with authentic flavors, crafted with care.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Canonical -->
    <link rel="canonical" href={Astro.url.href} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url.href} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Favicon (optional, add later) -->
    <!-- <link rel="icon" href="/favicon.svg" /> -->

    <slot name="head" />
  </head>

  <body class="bg-white text-gray-900 antialiased">
    <header class="border-b">
      <nav class="max-w-6xl mx-auto p-4 flex justify-between items-center">
        <!-- Left: Brand / Navigation -->
        <div class="flex gap-6">
          <a href="/" class="font-semibold hover:underline">
            Dumpling Delights
          </a>
          <a href="/menu" class="hover:underline">Menu</a>
          <a href="/about" class="hover:underline">About</a>
          <a href="/contact" class="hover:underline">Contact</a>
        </div>

        <!-- Right: Language Switcher -->
        <div class="text-sm">
          <a href="/" class="hover:underline">EN</a>
          <span class="mx-1">|</span>
          <a href="/zh" class="hover:underline">中文</a>
        </div>
      </nav>
    </header>

    <main class="min-h-screen">
      <slot />
    </main>

    <footer class="border-t mt-12">
      <div class="max-w-6xl mx-auto p-4 text-sm text-gray-600">
        © {new Date().getFullYear()} Dumpling Delights. All rights reserved.
      </div>
    </footer>
  </body>
</html>
